<?xml version="1.0"?>
<robot name="plane_with_cube_marker">

<link name="plane">
    <visual>
        <geometry>
            <box size="200 200 0.02"/>
        </geometry>
        <material name="gray">
            <color rgba="0.9 0.9 0.9 1"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="200 200 0.02"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="1"/>
        <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
</link>

<link name="marker">
    <visual>
        <geometry>
            <box size="0.11 0.11 0.001"/>
        </geometry>
        <material name="red">
            <color rgba="1 0 0 0.8"/>
        </material>
    </visual>
</link>

<joint name="marker_joint" type="fixed">
    <parent link="plane"/>
    <child link="marker"/>
    <origin xyz="0.5 0.5 0.03" rpy="0 0 0"/>
</joint>

